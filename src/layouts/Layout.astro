---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="cs">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Moje portfolio projektÅ¯" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<main>
			<slot />
		</main>
	</body>
</html>

<style is:global>
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--background: #13151a;
		--text: #c9c9c9;
	}
	html {
		font-family: system-ui, sans-serif;
		background: var(--background);
		color: var(--text);
	}
	body {
		margin: 0;
		display: flex;
		justify-content: center;
		min-height: 100vh;
	}
	main {
		width: 800px;
		max-width: calc(100% - 2rem);
		padding: 2rem;
		line-height: 1.6;
	}
	h1 {
		font-size: 3rem;
		font-weight: 700;
		line-height: 1;
		margin-bottom: 1em;
        color: white;
	}
    h2 { color: white; margin-top: 2rem;}
    a { color: #a78bfa; text-decoration: none; }
    a:hover { text-decoration: underline; }
    .project-card {
        border: 1px solid #333;
        padding: 1.5rem;
        border-radius: 8px;
        background: #1a1d23;
        margin-bottom: 2rem;
    }
    .tech-stack {
        font-size: 0.85rem;
        color: #888;
        margin-top: 1rem;
        font-family: monospace;
    }
</style>